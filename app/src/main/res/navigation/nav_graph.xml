<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation"
            app:startDestination="@id/homeFragment">

    <fragment android:id="@+id/homeFragment" android:name="com.example.room.ui.HomeFragment" android:label="fragment_home"
              tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_homeFragment_to_updateFragment" app:destination="@id/updateFragment"/>
    </fragment>
    <fragment android:id="@+id/updateFragment" android:name="com.example.room.ui.UpdateFragment"
              android:label="fragment_update" tools:layout="@layout/fragment_update">
        <argument android:name="currentUser" app:argType="com.example.room.entities.Person"/>
    </fragment>
</navigation>